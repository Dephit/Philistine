<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:width="250dp" android:height="250dp">
                <shape android:shape="rectangle" >
                    <solid android:color="#20385A"/>
                </shape>
            </item>
            <item android:gravity="center" android:width="65dp" android:height="65dp"
                android:drawable="@drawable/ic_photo_camera"/>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item android:width="250dp" android:height="250dp">
                <shape android:shape="rectangle" >
                    <solid android:color="#233D62"/>
                </shape>
            </item>
            <item android:gravity="center" android:width="65dp" android:height="65dp"
                android:drawable="@drawable/ic_photo_camera"/>
        </layer-list>
    </item>
</selector>