<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item >
                <shape android:shape="rectangle">
                    <solid android:color="@color/black30" />
                    <corners android:topLeftRadius="@dimen/buttons_corner_radius"
                        android:bottomLeftRadius="@dimen/buttons_corner_radius"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/checked_bg_color" />
                    <corners android:radius="@dimen/buttons_corner_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/black30" />
            <corners android:topLeftRadius="@dimen/buttons_corner_radius"
                android:bottomLeftRadius="@dimen/buttons_corner_radius"/>
        </shape>
    </item>
</selector>