<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item >
                <shape android:shape="rectangle"  >
                    <corners android:radius="@dimen/_4sdp"/>
                    <solid android:color="@color/black5" />
                    <stroke android:width="1dp" android:color="@color/light_blue_button_color" />
                </shape>
            </item>
            <item
                android:bottom="1.5dp"
                android:height="1dp"
                android:left="@dimen/_2sdp"
                android:width="@dimen/_75sdp"
                >
                <shape android:shape="rectangle">
                    <solid android:color="@color/background"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/_4sdp"/>
            <solid android:color="@color/black5" />
            <stroke
                android:width="1dp"
                android:color="@color/black15"/>
        </shape>
    </item>
</selector>