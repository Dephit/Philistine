<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/close_button_fill" />
            <stroke android:color="@color/close_button_stroke" android:width="1dp"/>
            <corners android:radius="@dimen/buttons_corner_radius"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/close_button_fill_pressed" />
            <stroke android:color="@color/close_button_stroke" android:width="1dp"/>
            <corners android:radius="@dimen/buttons_corner_radius"/>
        </shape>
    </item>
</selector>