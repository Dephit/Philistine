<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    tools:context=".StartScreenHeaderFragment">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:src="@drawable/ic_logo_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notification_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/connect_device"
        app:layout_constraintTop_toTopOf="@+id/connect_device"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/add_client_button"
        android:layout_width="wrap_content"

        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/light_blue_button_color"
        android:fontFamily="@font/gilroylight"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:isScrollContainer="false"
        android:lines="1"
        android:onClick="openNewClientScreen"
        android:singleLine="true"
        android:text="Новый клиент"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/buttons_corner_radius"
        app:icon="@drawable/ic_round_add"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/_1sdp"
        app:iconSize="@dimen/_12sdp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/connect_device"

        android:layout_width="wrap_content"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:backgroundTint="@color/light_blue_button_color"
        android:fontFamily="@font/gilroylight"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:isScrollContainer="false"
        android:lines="1"
        android:singleLine="true"
        android:text="Подключить тренажер"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/buttons_corner_radius"
        app:icon="@drawable/ic_bluetooth"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/_1sdp"
        app:iconSize="@dimen/_12sdp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/add_client_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/statistic_button"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/close_button_drawable"
        android:fontFamily="@font/gilroylight"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:isScrollContainer="false"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scrollbarSize="0dp"
        android:shadowColor="@android:color/transparent"
        android:text="Статистика"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/transparent"
        android:textColorHint="@android:color/transparent"
        android:textColorLink="@android:color/transparent"
        android:textCursorDrawable="@android:color/transparent"
        android:textSize="@dimen/_7sdp"
        app:cornerRadius="@dimen/buttons_corner_radius"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/_8sdp"
        app:iconTint="#6184C7"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exit_button"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:rippleColor="@color/close_button_fill_pressed"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/demo_button"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/close_button_drawable"
        android:fontFamily="@font/gilroylight"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:isScrollContainer="false"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scrollbarSize="0dp"
        android:shadowColor="@android:color/transparent"
        android:text="Демо"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/transparent"
        android:textColorHint="@android:color/transparent"
        android:textColorLink="@android:color/transparent"
        android:textCursorDrawable="@android:color/transparent"
        android:textSize="@dimen/_7sdp"
        app:cornerRadius="@dimen/buttons_corner_radius"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/_8sdp"
        app:iconTint="#6184C7"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/statistic_button"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:rippleColor="@color/close_button_fill_pressed"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="1dp" />

    <include
        android:id="@+id/notification"
        layout="@layout/notification_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/demo_button"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <ImageButton
        android:id="@+id/exit_button"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="@dimen/_29sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/close_button_drawable"
        android:isScrollContainer="false"
        android:onClick="exitFromAccount"
        android:src="@drawable/ic_sign_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/add_client_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />
</androidx.constraintlayout.widget.ConstraintLayout>